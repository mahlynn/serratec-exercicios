package br.com.residencia.poo.exercicios;

import java.util.Scanner;

public class ListaExercicioDois {
	
	public static void main(String[] args) {
	
	int idade, somaIdade = 0;
	Scanner ler = new Scanner(System.in);
	
	for(int cont = 1; cont <= 5; cont++) {
		System.out.print("Insira a idade do colega "+ cont +": ");
		idade = ler.nextInt();
		somaIdade += idade;
	}
	
	System.out.print("Insira a sua idade: ");
	idade = ler.nextInt();
	somaIdade += idade;
	
	System.out.println("=====================================");
	System.out.println("O nosso tempo de vida Ã©: "+ somaIdade);

}
}
